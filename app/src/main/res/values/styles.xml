<resources>

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">

    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="windowBackground">@color/windowBackground</item>
        <item name="titleColor">@color/titleColor</item>
        <item name="textColor">@color/textColor</item>
        <item name="labelColor">@color/labelColor</item>
        <item name="previewBackColor">@color/previewBackColor</item>
        <item name="previewFrameColor">@color/previewFrameColor</item>
        <item name="itemBackground">@color/itemBackground</item>
        <item name="dividerColor">@color/dividerColor</item>
        <item name="detailTitleColor">@color/detailTitleColor</item>
        <item name="detailBackground">@drawable/shadow_light</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">

        <item name="windowBackground">@color/windowBackground_Dark</item>
        <item name="titleColor">@color/titleColor_Dark</item>
        <item name="textColor">@color/textColor_Dark</item>
        <item name="labelColor">@color/labelColor_Dark</item>
        <item name="previewBackColor">@color/previewBackColor_Dark</item>
        <item name="previewFrameColor">@color/previewFrameColor_Dark</item>
        <item name="itemBackground">@color/itemBackground_Dark</item>
        <item name="dividerColor">@color/dividerColor_Dark</item>
        <item name="detailTitleColor">@color/detailTitleColor_Dark</item>
        <item name="detailBackground">@drawable/shadow_dark</item>
    </style>

    <attr name="windowBackground" format="color"/>
    <attr name="titleColor" format="color"/>
    <attr name="textColor" format="color"/>
    <attr name="labelColor" format="color"/>
    <attr name="previewBackColor" format="color"/>
    <attr name="previewFrameColor" format="color"/>
    <attr name="itemBackground" format="color"/>
    <attr name="dividerColor" format="color"/>
    <attr name="detailTitleColor" format="color"/>
    <attr name="detailBackground" format="reference"/>

</resources>
